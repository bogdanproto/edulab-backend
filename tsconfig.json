{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es6", "ES2021", "DOM", "ESNext"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": true
  },
  "exclude": ["test", "dist"]
}
